<%= form_for(@book) do |f| %>

 <% if book.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% book.errors.full_messages.each do |book| %>
          <li><%= book %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content, '内容' %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <%= f.submit '投稿', class: 'btn btn-primary' %>
<% end %>